{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Deploy Classic",
            "type": "shell",
            "command": "sh",
            "args": [
                ".scripts/deploy.sh",
                "-c"
            ],
        },
        {
            "label": "Deploy TBC",
            "type": "shell",
            "command": "sh",
            "args": [
                ".scripts/deploy.sh",
                "-b"
            ],
        },
        {
            "label": "Build and Release",
            "type": "shell",
            "command": ".scripts\\build.sh",
        },
        {
            "label": "Busted All",
            "type": "shell",
            "command": "busted",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "windows": {
                "args": [
                    "--lpath=${workspaceFolder}\\RCLootCouncil\\__tests\\?.lua",
                    "--helper=${workspaceFolder}\\.specs\\ClassicEnvironment.lua",
                    "-C=${workspaceFolder}\\RCLootCouncil",
                    "-f=${workspaceFolder}\\.busted"
                ]
            },
            "args": [
                "--lpath=${workspaceFolder}/RCLootCouncil/__tests/?.lua",
                "--helper=${workspaceFolder}/.specs/ClassicEnvironment.lua",
                "-C=${workspaceFolder}\\RCLootCouncil",
                "-f=${workspaceFolder}\\.busted"
            ]
        },
        {
            "label": "Busted this file",
            "type": "shell",
            "command": "busted",
            "args": [
                "--lpath=${workspaceFolder}/RCLootCouncil/__tests/?.lua",
                "--helper=${workspaceFolder}/.specs/ClassicEnvironment.lua",
                "-C=${workspaceFolder}\\RCLootCouncil",
                "-f=${workspaceFolder}\\.busted",
                "-v",
                "${file}",
            ],
            "windows": {
                "args": [
                    "--lpath=${workspaceFolder}\\RCLootCouncil\\__tests\\?.lua",
                    "--helper=${workspaceFolder}\\.specs\\ClassicEnvironment.lua",
                    "-C=${workspaceFolder}\\RCLootCouncil",
                    "-f=${workspaceFolder}\\.busted",
                    "-v",
                    "${file}",
                ],
            },
            "group": "test"
        },
        {
            "label": "Busted List Tests",
            "type": "shell",
            "command": "busted",
            "args": [
                "-l"
            ],
            "group": "test"
        }
    ]
}