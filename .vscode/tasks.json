{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Deploy Classic",
            "type": "shell",
            "command": "sh .scripts/deploy.sh",
            "args": [
                "-c"
            ],
        },
        {
            "label": "Deploy TBC",
            "type": "shell",
            "command": "sh .scripts/deploy.sh",
            "args": [
                "-b"
            ],
        },
        {
            "label": "Build and Release",
            "type": "shell",
            "command": ".scripts\\build.sh",
        },
        {
            "label": "Busted All",
            "type": "shell",
            "command": "busted",
            "group": {
                "kind": "test",
                "isDefault": true
            },
        },
        {
            "label": "Busted this file",
            "type": "shell",
            "command": "busted",
            "args": [
            "--lpath=${workspaceFolder}\\RCLootCouncil\\?.lua;${workspaceFolder}\\RCLootCouncil\\__tests\\?.lua",
                "${file}",
            ],
            "group": "test"
        },
        {
            "label": "Busted List Tests",
            "type": "shell",
            "command": "busted",
            "args": [
                "-l"
            ],
            "group": "test"
        }
    ]
}